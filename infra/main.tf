  description = "SerpAPI key for ${var.project_name}"

  tags = {
    Name = "${var.project_name}-serpapi-key"
  }
}

resource "aws_secretsmanager_secret_version" "serpapi_key" {
  secret_id     = aws_secretsmanager_secret.serpapi_key.id
